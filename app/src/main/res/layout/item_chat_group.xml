<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <!-- 群组图标 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardAvatar"
            android:layout_width="54dp"
            android:layout_height="54dp"
            app:cardCornerRadius="27dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/ivGroupAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#E3F2FD"
                android:padding="12dp"
                android:src="@drawable/ic_group"
                android:contentDescription="Chat group avatar"
                app:tint="#1976D2" />
        </androidx.cardview.widget.CardView>

        <!-- 未读消息指示器 -->
        <TextView
            android:id="@+id/tvUnreadCount"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/bg_unread_count"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/cardAvatar"
            app:layout_constraintTop_toTopOf="@id/cardAvatar"
            tools:text="3"
            tools:visibility="visible" />

        <!-- 群组名称 -->
        <TextView
            android:id="@+id/tvGroupName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#212121"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/tvTimestamp"
            app:layout_constraintStart_toEndOf="@id/cardAvatar"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="COMP7506 Group" />

        <!-- 最后消息 -->
        <TextView
            android:id="@+id/tvLastMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#757575"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@id/tvTimestamp"
            app:layout_constraintStart_toEndOf="@id/cardAvatar"
            app:layout_constraintTop_toBottomOf="@id/tvGroupName"
            tools:text="Last message from this chat group" />

        <!-- 时间戳 -->
        <TextView
            android:id="@+id/tvTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9E9E9E"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="14:30" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>