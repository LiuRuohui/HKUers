<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#333333">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Group Announcement"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="The announcement will be displayed at the top of the chat room for all members to see"
        android:textColor="#CCCCCC"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/etAnnouncement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_edit_text_rounded"
        android:gravity="top"
        android:hint="Enter announcement content..."
        android:inputType="textMultiLine"
        android:minHeight="120dp"
        android:padding="12dp"
        android:textColor="#333333"
        android:textColorHint="#777777"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Tip: Leave blank to clear current announcement"
        android:textColor="#AAAAAA"
        android:textSize="12sp"
        android:textStyle="italic" />

</LinearLayout> 