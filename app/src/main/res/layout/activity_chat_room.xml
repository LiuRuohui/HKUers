<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".features.chat.ChatRoomActivity">

    <!-- 顶部安全区域，预留系统状态栏位置 -->
    <View
        android:id="@+id/statusBarSpace"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#1E1E1E" />

    <!-- 彩色指示条 -->
    <View
        android:id="@+id/colorIndicator"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/statusBarSpace"
        android:background="#4CAF50" />

    <!-- 标题栏 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#1E1E1E"
        android:elevation="4dp"
        android:layout_below="@id/colorIndicator">

        <!-- 返回按钮 -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="start"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="返回"
            android:src="@drawable/ic_arrow_back_white_24dp" />

        <!-- 页面标题 -->
        <TextView
            android:id="@+id/tvChatRoomName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="COMP7506-A-2023" />

        <!-- 群组信息按钮 -->
        <ImageButton
            android:id="@+id/btnGroupInfo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="群组信息"
            android:src="@drawable/ic_more_vert_white_24dp" />

    </androidx.appcompat.widget.Toolbar>

    <!-- 分割线 -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_below="@id/toolbar" />

    <!-- 公告区域 -->
    <LinearLayout
        android:id="@+id/announcementLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:background="#FFF9E0"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="公告"
            android:src="@drawable/ic_announcement_24dp" />

        <TextView
            android:id="@+id/tvAnnouncement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#FF6D00"
            android:textSize="14sp"
            tools:text="这是群公告内容" />
    </LinearLayout>

    <!-- 消息列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerMessages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/inputLayout"
        android:layout_below="@id/announcementLayout"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" />

    <!-- 底部输入区域 -->
    <LinearLayout
        android:id="@+id/inputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomNavLayout"
        android:background="#1E1E1E"
        android:orientation="horizontal"
        android:padding="8dp">

        <EditText
            android:id="@+id/etMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_edit_text_rounded"
            android:hint="输入消息..."
            android:inputType="textMultiLine"
            android:maxLines="4"
            android:minHeight="40dp"
            android:padding="8dp"
            android:textColor="#CCCCCC"
            android:textColorHint="#777777"
            android:textSize="16sp"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <Button
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_button_primary"
            android:text="发送"
            android:textColor="@color/white" />
    </LinearLayout>

    <!-- 底部导航栏 -->
    <LinearLayout
        android:id="@+id/bottomNavLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#1E1E1E"
        android:padding="8dp"
        android:orientation="horizontal">

        <!-- 聊天 (高亮显示) -->
        <Button
            android:id="@+id/btnChat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="聊天"
            android:background="@android:color/transparent"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>

        <!-- 地图 -->
        <Button
            android:id="@+id/btnMap"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="地图"
            android:background="@android:color/transparent"
            android:textColor="#FFFFFF"/>

        <!-- 个人资料 -->
        <Button
            android:id="@+id/btnProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="我的"
            android:background="@android:color/transparent"
            android:textColor="#FFFFFF"/>

        <!-- 课程 -->
        <Button
            android:id="@+id/btnCourses"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="课程"
            android:background="@android:color/transparent"
            android:textColor="#FFFFFF"/>

        <!-- 交易 -->
        <Button
            android:id="@+id/btnMarketplace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="交易"
            android:background="@android:color/transparent"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

</RelativeLayout> 