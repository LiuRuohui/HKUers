<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    app:cardBackgroundColor="#1E1E1E"
    app:cardCornerRadius="16dp"
    app:cardElevation="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="28dp">

        <!-- 头像 -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivPopupAvatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/default_avatar"
            app:civ_border_color="#2C2C2C"
            app:civ_border_width="2dp" />

        <!-- 用户名 -->
        <TextView
            android:id="@+id/tvPopupUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="用户名" />

        <!-- 邮箱 -->
        <TextView
            android:id="@+id/tvPopupEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="#CCCCCC"
            android:textSize="16sp"
            tools:text="user@connect.hku.hk" />

        <!-- 个性签名 -->
        <TextView
            android:id="@+id/tvPopupSignature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:textColor="#D8D8D8"
            android:textSize="16sp"
            android:textStyle="italic"
            tools:text="&quot;Hello, I am a HKUer&quot;" />

        <!-- 分割线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="#2C2C2C" />

        <!-- 个人信息区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- 院系 -->
            <TextView
                android:id="@+id/tvPopupDepartment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:textColor="#CCCCCC"
                android:textSize="16sp"
                tools:text="School of Computer Science" />

            <!-- 专业 -->
            <TextView
                android:id="@+id/tvPopupProgramme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:textColor="#CCCCCC"
                android:textSize="16sp"
                tools:text="Computer Science (Multimedia Computing)" />

            <!-- 入学年份 -->
            <TextView
                android:id="@+id/tvPopupYearOfEntry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:textColor="#CCCCCC"
                android:textSize="16sp"
                tools:text="入学年份: 2024" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView> 